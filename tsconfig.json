{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "types": ["@types/node"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
